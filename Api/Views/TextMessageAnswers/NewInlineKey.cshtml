@model Api.Models.PageViewModel

<form role="form" action="/text-message-answers/add" method="POST" id="newAnswer">
    <div class="form-group">
        <label for="caption">Message</label>
        <input name="message" type="text" class="form-control" id="caption" placeholder="" required>
    </div>
    <div class="form-group">
        <label for="answer">Answer</label>
    </div>
    <input type="hidden" name="botId" value="@Model.CurrentBot.Bot.Id" required>
    <textarea class="form-control"  data-provide="markdown" style="resize: none;" placeholder="Text..." name="answer" rows="1" form="newAnswer" required></textarea>
    <br>
    <button type="submit" class="btn btn-primary">Create</button>
</form>