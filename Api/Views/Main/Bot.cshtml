@model Api.Models.PageViewModel

<div class="col-md-3">
    <div class="panel panel-white">
        <div class="panel-heading clearfix">
            <h4 class="panel-title">Bot</h4>
        </div>
        <div class="panel-body user-profile-panel">
            <img src="~/images/messenger.png" class="user-profile-image img-circle" alt="">
            <h4 class="text-center m-t-lg">@Model.CurrentBot.Bot.Name</h4>
            <p class="text-center" style="font-size: 90%">@Model.CurrentBot.Bot.Token</p>
            <hr>
            <ul class="list-unstyled text-center">
                <li>
                    <p><i class="fa fa-map-marker m-r-xs"></i>Cognitive Services: @(Model.CurrentBot.Bot.CognitiveServicesEnabled ? "enabled" : "disabled")</p>
                </li>
                <li>
                    <p>
                        <p><i class="fa fa-paper-plane-o m-r-xs"></i>Networking: @(Model.CurrentBot.Bot.NetworkingEnabled ? "enabled" : "disabled")</p>
                    </p>
                </li>
            </ul>
            <hr>
            <button class="btn btn-info btn-block">@(Model.CurrentBot.Status ? "Stop" : "Start")</button>
        </div>
    </div>
</div>
<div class="col-md-6">
    <div class="panel panel-white">
        <div class="panel-body">
            <div class="post">
                <textarea class="form-control" placeholder="Post" rows="4"></textarea>
                <div class="post-options">
                    <button class="btn btn-default pull-right">Send</button>
                </div>
            </div>
        </div>
    </div>

    <div class="profile-timeline">
        <ul class="list-unstyled">
            <li class="timeline-item">
                <div class="panel panel-white">
                    <div class="panel-body">
                        <div class="timeline-item-header">
                            <img src="~/images/messenger.png" alt="">
                            <p>
                                @Model.CurrentBot.Bot.Name <span>text message answers</span>
                            </p>
                        </div>
                        <br/>
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Text Message</th>
                                <th>Answer</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var textMessage in Model.CurrentBot.TextMessages)
                            {
                                <tr>
                                    <td>@textMessage.Message</td>
                                    <td>@textMessage.Answer</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <br/>

                        <div class="timeline-item-header">
                            <img src="~/images/messenger.png" alt="">
                            <p>
                                @Model.CurrentBot.Bot.Name <span>inline keys</span>
                            </p>
                        </div>
                        <br/>
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Caption</th>
                                <th>Answer</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var inlineKey in Model.CurrentBot.InlineKeys)
                            {
                                <tr>
                                    <td>@inlineKey.Caption</td>
                                    <td>@inlineKey.Answer</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <br/>
                        <div class="timeline-item-header">
                            <img src="~/images/messenger.png" alt="">
                            <p>
                                @Model.CurrentBot.Bot.Name <span>url keys</span>
                            </p>
                        </div>
                        <br/>
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Caption</th>
                                <th>Url</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var textMessage in Model.CurrentBot.InlineUrlKeys)
                            {
                                <tr>
                                    <td>@textMessage.Caption</td>
                                    <td>@textMessage.Url</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>
<div class="col-md-3">
    <div class="panel panel-white">
        <div class="panel-heading clearfix">
            <h4 class="panel-title">Start message</h4>
        </div>
        <div class="panel-body">
            <p>@Model.CurrentBot.Bot.StartMessage</p>
        </div>
    </div>
    @foreach (var interview in Model.CurrentBot.Interviews)
    {
        <div class="panel panel-white">
            <div class="panel-heading clearfix">
                <h4 class="panel-title">@interview.Name</h4>
            </div>
            <div class="panel-heading clearfix">
                <h5 class="panel-title">@interview.Question</h5>
            </div>
            <ul>
            @foreach (var answer in interview.Answers)
            {
                <div class="panel-body">
                    <li>@answer</li>
                </div>
            }
            </ul>
        </div>
    }
</div>