@model Api.Models.PageViewModel

<form id="interviews-form" role="form" action="/interviews/add" method="POST">
    <div class="form-group">
        <label for="name">Name</label>
        <input name="name" type="text" class="form-control" id="name" placeholder="" required>
    </div>
    <div class="form-group">
        <label for="question">Question</label>
        <input name="question" type="text" class="form-control" id="question" placeholder="" required>
    </div>
    <div class="form-group">
        <label for="answers[]">Answer</label>
        <input name="answers[]" type="text" class="form-control" id="answers[]" placeholder="" required>
    </div>
    <div id="custom-answers">

    </div>
    <div class="form-group">
        <button type="button" class="btn btn-primary" id="add-answer-button">Add Answer</button>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
    <input type="hidden" value="@Model.CurrentBot.Bot.Id" name="botId"/>
</form>

<script>
    $(document).ready(function() {
        $("#add-answer-button").click(function(e) {
            e.preventDefault();
            $("#custom-answers")
                .append(
                    '<div class="form-group"><div class="row"><div class="col-md-6"><label for="answers[]">Answer</label><input name="answers[]" type="text" class="form-control" id="answers[]" placeholder="" required></div><div class="col-md-6"><a href="#" class="btn btn-danger" id="deleteAnswer">Delete</a></div></div></div></div>');
        });
        $("#custom-answers").on("click",
            "#deleteAnswer",
            function(e) {
                e.preventDefault();
                $(this).parent('div').parent('div').remove();
            });
    });
</script>