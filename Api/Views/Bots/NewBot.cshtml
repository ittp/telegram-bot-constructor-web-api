@model Api.Models.PageViewModel

<form role="form" action="/bots/add" method="POST">
    <div class="form-group">
        <label for="name">Name</label>
        <input name="name" type="text" class="form-control" id="name" placeholder="" required>
    </div>
    <div class="form-group">
        <label for="token">Token</label>
        <input name="token" type="text" class="form-control" id="token" placeholder="" required>
    </div>
    <div class="form-group">
        <label for="message">Message</label>
        <input name="message" type="text" class="form-control" id="message" placeholder="" required>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
